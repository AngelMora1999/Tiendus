<div class="col-md-6 col-xs-10 col-sm-8 col-lg-5 center-block no-float">
  <div class="card big-padding">
    <h2>Crear cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="top-space">
        <%= f.label :email, "Correo electrónico" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="top-space">
        <%= f.label :password, "Contraseña" %>
        <% if @minimum_password_length %>
        <b>( caracteres minimos <%= @minimum_password_length %>)</b>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="top-space">
        <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Crear cuenta", class: "btn btn-info" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
